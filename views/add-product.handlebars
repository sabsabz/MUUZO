<div class="flex flex-col pb-6 mb-6 border-b p-8 bg-purple-600 text-white">
                <h1 class="text-3xl font-semibold mb-3">Create a new product</h1>
                <span class="text-slate-600 text-sm">Craft the details for a new product</span>
            </div>
<div class="max-w-3xl mx-auto my-4 px-4 rounded-md border border-gray-300">
    <form action="">
      <h1 class="border-geay-200 w-full border-b p-4 text-xl">Add Product</h1>
      <div class="space-y-4 p-4">
        <!-- Product type -->
        <div>
          <label for="type" class="block text-sm font-medium leading-6 text-gray-900">Product Type *</label>
          <select id="type" name="type" class="mt-2 block w-full rounded-md border-0 py-2 pl-2 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-1 focus:ring-indigo-600 sm:text-sm sm:leading-6">
            <option selected disabled value="">Select</option>
            <option>Option</option>
          </select>
        </div>
        <!-- Name and Code -->
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <label for="name" class="block text-sm font-medium leading-6 text-gray-900">Name *</label>
            <div class="mt-2">
              <input type="text" name="name" id="name" class="block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Enter Name.." />
            </div>
          </div>
          <div>
            <label for="code" class="block text-sm font-medium leading-6 text-gray-900">Code *</label>
            <div class="mt-2">
              <input type="email" name="code" id="email" class="block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Enter Code.." />
            </div>
          </div>
        </div>
        <!-- Barcode Symbology and Category  -->
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <label for="barcode" class="block text-sm font-medium leading-6 text-gray-900">Barcode Symbology *</label>
            <div class="mt-2">
              <input type="text" name="barcode" id="barcode" class="block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Enter Barcode Symbology.." />
            </div>
          </div>
          <div>
            <label for="Category" class="block text-sm font-medium leading-6 text-gray-900">Category *</label>
            <div class="mt-2">
              <input type="text" name="Category" id="Category" class="block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Enter Category.." />
            </div>
          </div>
        </div>
        <!-- Cost and Price -->
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <label for="cost" class="block text-sm font-medium leading-6 text-gray-900">Cost *</label>
            <div class="mt-2">
              <input type="number" name="cost" id="cost" class="block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Enter Cost.." />
            </div>
          </div>
          <div>
            <label for="price" class="block text-sm font-medium leading-6 text-gray-900">Price *</label>
            <div class="mt-2">
              <input type="number" name="price" id="price" class="block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Enter Price.." />
            </div>
          </div>
        </div>

        <!-- Quantity and Image -->
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-1">
          <div>
            <label for="Quantity" class="block text-sm font-medium leading-6 text-gray-900">Quantity *</label>
            <div class="mt-2">
              <input type="number" name="Quantity" id="Quantity" class="block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Enter Quantity.." />
            </div>
          </div>
          <div>
            <label for="file" class="block text-sm font-medium leading-6 text-gray-900">Image *</label>
            <div class="mt-2">
              <input type="file" name="file" id="file" class="block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Enter Price.." />
            </div>
          </div>
        </div>
        <div class="flex gap-4 justify-between items-center">
                      <button type="reset" class="text-sm font-medium px-4 py-2 border border-gray-300 rounded-md bg-red-500 hover:bg-red-600 cursor-pointer disabled:cursor-not-allowed text-white">
          Reset
          </button>
          <button type="submit" class="text-sm font-medium px-4 py-2 border border-gray-300 rounded-md bg-blue-500 hover:bg-blue-600 cursor-pointer disabled:cursor-not-allowed text-white">
            Add Product
          </button>

        </div>
      </div>
    </div>
